[
  {
    "path": "$.users[*]",
    "command": "flatten",
    "flattenSettings": {
      "delimiter": ".",
      "includeArrayIndices": true,
      "metadataPath": "$",
      "metadataKey": "_metadata"
    }
  },
  {
    "path": "$.users[*]",
    "command": "restore",
    "restoreSettings": {
      "metadataPath": "$",
      "metadataKey": "_metadata",
      "removeMetadata": true
    }
  }
]